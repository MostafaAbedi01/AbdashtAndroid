<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_bluelight"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llPlayersName"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/header"
            layout="@layout/header_bar_code" />

        <LinearLayout
            android:id="@+id/laymain"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <LinearLayout
                android:id="@+id/lay1Q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/lblQ1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="1) آیا از کولر های آبی برای سرمایش منزل استفاده می شود؟  "
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layShekleZaheri2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/Vaziat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <RadioButton
                        android:id="@+id/rdb1"
                        style="@style/App_RadioButtonStyle"
                        android:background="@drawable/shape_radiobutton"
                        android:text="بله" />

                    <RadioButton
                        android:id="@+id/rdb0"
                        style="@style/App_RadioButtonStyle"
                        android:background="@drawable/shape_radiobutton"
                        android:checked="true"
                        android:text="خیر" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <View
                    android:id="@+id/lblTitle"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/holo_green_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layss1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/lblspinner1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2) به طور متوسط چند ساعت در روز از کولر آبی استفاده می کنید؟ "
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2Q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <SeekBar
                    android:id="@+id/SeekBarQ1"
                    style="@style/App_SeekBarStyle"
                    android:layout_width="fill_parent"
                    android:background="@drawable/shape_seekbar"
                    android:max="24"
                    android:progress="2" />

                <TextView
                    android:id="@+id/txtSeekBarQ1"
                    style="@style/App_TextViewDownSpinner"
                    android:layout_below="@+id/SeekBarQ2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <View
                    android:id="@+id/lblTitle"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/holo_green_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layQ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/lblQ2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="3) لطفا حجم کولر خود را مشخص نمایید؟ "
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layss2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Spinner
                    android:id="@+id/spinner1"
                    style="@style/App_SpinnerStyle"
                    android:layout_weight="1"
                    android:background="@drawable/shape_spinner" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <View
                    android:id="@+id/lblTitle"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/holo_green_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layCountPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/lblCountPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="5)چه تعداد افراد در خانه شما زندگی میکنند؟ ؟ "
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2CountPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <SeekBar
                    android:id="@+id/SeekBarCountPeople"
                    style="@style/App_SeekBarStyle"
                    android:background="@drawable/shape_seekbar"
                    android:max="15"
                    android:progress="3" />

                <TextView
                    android:id="@+id/txtCountPeople"
                    style="@style/App_TextViewDownSpinner"
                    android:layout_below="@+id/SeekBarCountPeople" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layTitleCountPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <View
                    android:id="@+id/lblTitleCountPeople"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/holo_green_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/laybtns"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/btnResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/btn_header_settings"
                    android:gravity="center"
                    android:src="@+drawable/btn_result" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>