<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" />
            <gradient
                    android:startColor="#ffB5D76B"
                    android:centerColor="#ff8CB64A"
                    android:centerY="0.75"
                    android:endColor="#ff529E21"
            />
        </shape>
    </item> 

    
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <gradient
                        android:startColor="#80bfefff"
                        android:centerColor="#80b2dfee"
                        android:centerY="0.75"
                        android:endColor="#a09ac0cd"
                />
            </shape>
        </clip>
    </item>

        <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <gradient
                        android:startColor="#aafff6b8"
                        android:centerColor="#ddff9900"
                        android:centerY="0.75"
                        android:endColor="#ffff9900"
                />
            </shape>
        </clip>
    </item>
    
</layer-list>
